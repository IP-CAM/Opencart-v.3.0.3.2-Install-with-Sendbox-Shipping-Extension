					  <div class = "form-group required">
					 <label class="col-sm-2 control-label" for="sendbox_city"> {{entry_city}}	</label> 
                    	<div class="col-sm-10"> 
						<input type="text" name="sendbox_city_select"  id="sendbox_city" value = "{{sendbox_city}}" class="form-control" />
						</div>

					 </div>
 

					 <div class = "form-group required">
                    	<label class="col-sm-2 control-label" for="sendbox_state"> {{entry_state}}</label> 
                    	<div class="col-sm-10"> 
						<select class="sendbox_state_select form-control" id="sendbox_state" name="sendbox_state_select">  
						<option value>--Select State--</option> 
						
                       {% for s_state in sendbox_state %}
					   
										{% if s_state == sendbox_state_select %}
										<option value="{{ s_state.code }}" selected="selected">{{ s_state.name }}
										</option>
										{% else %}
										<option value="{{ s_state.code }}">{{ s_state.name }}
										</option>
										{% endif %}
										{% endfor %}
						</select>
						</div>
				     </div>   

					  <div class = "form-group required">
                    	<label class="col-sm-2 control-label" for="sendbox_rates"> {{entry_rates}}</label> 
                    	<div class="col-sm-10"> 
						<select class="sendbox_rates_select form-control" id="sendbox_rates" > 
						{% for s_rates in sendbox_rates %}  
						{% if s_rates == sendbox_rates_select %}
						<option value = "{{s_rates}}" selected="selected">{{s_rates}}</option> 
						{% else %}
						<option value = "{{s_rates}}">{{s_rates}} </option>
						{% endif %}
						{% endfor %}
						</select>
						</div>
				     </div> 

					  <div class = "form-group required">
                    	<label class="col-sm-2 control-label" for="sendbox_pickup_types"> {{entry_sendbox_pickup_types}}</label> 
                    	<div class="col-sm-10"> 
						<select class="sendbox_pickup_types_select form-control" id="sendbox_pickup" name = "sendbox_pickup_types"> {{sendbox_pickup_types}}
						{% for s_types in sendbox_pickup_types %}  
						{% if s_types == sendbox_pickup_types %}
						<option value = "{{s_types}}" selected="selected">{{s_types}}</option> 
						{% else %}
						<option value = "{{s_types}}">{{s_types}} </option>
						{% endif %}
						{% endfor %}
						</select>
						</div>
				     </div> 

                     <div class = "form-group required">
                    	<label class="col-sm-2 control-label" for="input-geo-zone"> {{entry_geo_zone}}</label> 
                    	<div class="col-sm-10"> 
						<select name="shipping_sendbox_geo_zone_id" id="input-geo-zone" class="form-control">
										<option value="0">
										{{ text_all_zones }}
										</option>
										{% for geo_zones in geo_zone %}
										{% if geo_zone.geo_zone_id == sendbox_geo_zone_id %}
										<option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}
										</option>
										{% else %}
										<option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}
										</option>
										{% endif %}
										{% endfor %}
									</select>
						</div>
				     </div>

                      <div class="form-group">
								<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}
								</label> 
								<div class="col-sm-10">
									<select name="shipping_sendbox_status" id="input-status" class="form-control">

								{% if shipping_sendbox_status %}
										<option value="1" selected="selected">{{ text_enabled }}
										</option>
										<option value="0">{{ text_disabled }}
										</option>
								{% else %}
										<option value="1">{{ text_enabled }}
										</option>
										<option value="0" selected="selected">{{ text_disabled }}
										</option>
								{% endif %}
									</select>
								</div>
							</div>

							 <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="shipping_sendbox_sort_order" value="{{ sendbox_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>

				</form>
				{% endif %}
			</div>
		</div>
