{{ header }}
{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-pp-std-uk" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button> 
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{button_cancel}}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
			<h1>
{{ heading_title }}
			</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %} 
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %} 
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %} 
		<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
		{% endif %}
		{% if not show_connect_box and not sendbox_url %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					<i class="fa fa-pencil"></i> 
					{{ text_edit }}
				</h3>
			</div>
			<div class="panel-body">
			{# ADDING APPID AND SECERT PART #}
			
			<div id="instructions">
			 <span><b>To connect to sendbox,copy your webhook url and  register on sendbox
			 <br/> then go on sendbox to get your app_id and client secret.
			 copy these details and paste in their respective feilds, click on save and then connect to sendbox
		     </b> </span> 

    	<div class = "form-group">
        	<label class="col-sm-2 control-label" for="sendbox_webhook">{{ entry_senbox_webhook }}	</label> 
            <div class="col-sm-10"> 
			<input type="text" name="sendbox_webhook"  id="sendbox_webhook" class="form-control" value="{{static_url}}" />
			</div>
      	</div>  

		  <br/>
  <form name="sendbox-id-form"  id="sendbox-id-form" class="form-horizontal" method="POST" action = "{{action}}">
  <div id="tab-sendbox-details">

					<div class = "sendbox_ids">


					<div class = "form-group required">
                    	<label class="col-sm-2 control-label" for="sendbox_id">{{ entry_app_id }}	</label> 
                    	<div class="col-sm-10"> 
						<input type="text" name="app_id"  id="sendbox_app_id" placeholder="sendbox_app_id" value = " " class="form-control" />
						</div>
					</div> 

					<div class = "form-group required">
                    	<label class="col-sm-2 control-label" for="sendbox_secert"> {{entry_client_secret}}	</label> 
                    	<div class="col-sm-10"> 
						<input type="text" name="client_secret"  id="sendbox_client_secret" value = " " class="form-control" />
						</div>
				     </div>
                    </div>
					<div>
					
					 <button class="btn btn-primary" type="submit" id="sendbox_id_btn">Save</button>
 			</form> 
			  <br/>
			 <br/>
			 {% endif %}
			 
			 {% if show_connect_box and sendbox_url and not connected %}
			 <a class="btn btn-primary sendbox_url" id="sendbox_btn"href ='{{sendbox_url}}'>Connect to Sendbox</a>
			 {% endif %}
			</div>
			{# END OF APPID AND SECERT PART#}
			{% if show_connect_box and sendbox_url and connected %}
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-pp-std-uk" class="form-horizontal">
					
					
                    	<div class="col-sm-10" style = "display:none"> 
						<input type="text" name="app_id"  id="sendbox_username" value = "{{app_id}}" class="form-control" />
						</div>

					<div class = "form-group required">
                    	<label class="col-sm-2 control-label" for="sendbox_username">{{ entry_sendbox_username }}	</label> 
                    	<div class="col-sm-10"> 
						<input type="text" name="sendbox_username"  id="sendbox_username" value = "{{sendbox_username}}" class="form-control" />
						</div>
					</div> 

					<div class = "form-group required">
                    	<label class="col-sm-2 control-label" for="sendbox_phone"> {{entry_phone}}	</label> 
                    	<div class="col-sm-10"> 
						<input type="text" name="sendbox_phone"  id="sendbox_phone" value = "{{sendbox_phone}}" class="form-control" />
						</div>
				     </div> 

					 <div class = "form-group required">
                    	<label class="col-sm-2 control-label" for="sendbox_email"> {{entry_email}}	</label> 
                    	<div class="col-sm-10"> 
						<input type="text" name="sendbox_email"  id="sendbox_email" value = "{{sendbox_email}}" class="form-control" />
						</div>
				     </div>

					  <div class = "form-group required">
                    	<label class="col-sm-2 control-label" for="sendbox_store_address"> {{entry_store_address}}</label> 
                    	<div class="col-sm-10"> 
						<input type="text" name="sendbox_store_address" value= "{{sendbox_store_address}}" id="sendbox_store_address" class="form-control" />
						</div>
				     </div> 

					 <div class = "form-group required">
                    	<label class="col-sm-2 control-label" for="sendbox_country"> {{entry_country}}	</label> 
                    	<div class="col-sm-10"> 
						<input type="text" name="sendbox_country"  id="sendbox_country" value = "{{sendbox_country}}" class="form-control" />
						</div>
				     </div> 


